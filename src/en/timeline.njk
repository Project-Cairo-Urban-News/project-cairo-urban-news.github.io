<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/doc_styles.css">
    <title>{{ title }}</title>
    <style>
      .previous-button, .next-button, .year-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: white; /* White background */
        color: #007bff; /* Blue text */
        text-align: center;
        border-radius: 5px;
        cursor: pointer;
        text-decoration: none; /* Remove underline from links */
        border: 2px solid #007bff; /* Blue border */
      }

      .previous-button:hover, .next-button:hover, .year-button:hover {
        background-color: #507f93; /* Hover color */
        color: white; /* White text on hover */
      }

      .container {
        padding-top: 20px;
      }

      .row {
        display: flex;
        justify-content: space-between;
      }

      .row .col {
        flex: 1;
        text-align: center;
      }
    </style>
  </head>
  <body>
    {% include 'navbar_ar.njk' %}
    <main dir="rtl">
      {% set previous = collections.page_ar_ar_sorted | getPreviousCollectionItem(page) %}
      {% set next = collections.page_ar_ar_sorted | getNextCollectionItem(page) %}
      <div class="container">
        <div class="row">
          <div class="col">
            {% if previous %}
              <a href="{{ previous.url }}" class="previous-button">Previous</a>
            {% endif %}
          </div>
          <div class="col">
            <a href="{{ parent }}" class="year-button">{{ date | toArabicNumerals }}</a>
          </div>
          <div class="col">
            {% if next %}
              <a href="{{ next.url }}" class="next-button">Next</a>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col col-8 mt-4">
            <img src="/images/vaseheadernoborder.svg" alt="Vase Header No Border" class="wmheader">
            {{ content | safe }}
          </div>
        </div>
      </div>
    </main>
    {% include 'wm_logo.html' %}
    {% include 'footer_ar.njk' %}
    <script src="/js/main.js"></script>
    <script src="/js/doc.js"></script>
    <script>
      const c = new CETEI();
      c.addBehaviors(doc_behaviors);
      c.processPage();
      const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
      const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));
    </script>
  </body>
</html>
